{
  "name": "@eboto/email",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "email:dev": "email dev --port 3002",
    "dev:email": "pnpm with-env email dev --port=3004 --dir=src/emails",
    "export": "email export",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./emails/*": {
      "types": "./dist/emails/*.d.ts",
      "default": "./src/emails/*.tsx"
    }
  },
  "dependencies": {
    "@aws-sdk/client-ses": "3.682.0",
    "@eboto/constants": "workspace:*",
    "@react-email/components": "0.0.25",
    "@react-email/render": "1.0.1",
    "@t3-oss/env-nextjs": "catalog:",
    "react": "catalog:",
    "react-email": "3.0.1"
  },
  "devDependencies": {
    "@eboto/eslint-config": "workspace:*",
    "@eboto/prettier-config": "workspace:*",
    "@eboto/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@eboto/prettier-config"
}
